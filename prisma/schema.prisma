generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model ProductComment {
  id_product_comment          Int      @db.UnsignedInt @id @default(autoincrement())
  id_product                  Int       @db.UnsignedInt  
  id_customer                 Int       @db.UnsignedInt
  id_guest                    Int       @db.UnsignedInt
  title                       String?   @db.VarChar(64)
  content                     String?   @db.Text
  customer_name               String?   @db.VarChar(64)
  grade                       Float?    @db.Float
  validate                    Boolean?  @db.TinyInt()
  deleted                     Boolean?  @db.TinyInt()
  date_add                    DateTime? @db.DateTime @default(now())
  

  @@map(name: "psne_product_comment") // use "psne_product_comment" as the table name
}
